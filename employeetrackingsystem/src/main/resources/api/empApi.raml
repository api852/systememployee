                  {"message" : "For bidden", "code" : 403}
      
      405:                          
       description: Method Not Allowed 
       body:
         application/json:
          type: Error
          example:
            {"message" : "Method Not Allowed", "code" : 405}
  

/delete:
  is: [client-id-required]
  delete:
    description: for deleting employee record
    queryParameters:
      Id:
        type: integer
        required: true
   

    responses:
     200:
      body:
        application/json:
          example:
            message: data deleted
     500:
      description: Internal Server Error
      body:
